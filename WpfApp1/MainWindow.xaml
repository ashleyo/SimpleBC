<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        <local:BrushColorConverter x:Key="BConverter" />
    </Window.Resources>
    
    <Grid Background="{Binding TheNumber, Converter={StaticResource BConverter}}">
        <StackPanel Width="100" Height="50" Orientation="Horizontal">
            <TextBox Name="NumericBox"  Text="{Binding TheNumber, Mode=TwoWay}" 
                     PreviewTextInput="numeric_texbox_PreviewTextInput" 
                     Width="50" />
            <StackPanel Orientation="Vertical">
                <Button Name="Up" Click="ClickHandler">Up</Button>
                <Button Name="Down" Click="ClickHandler">Down</Button>
            </StackPanel>
        </StackPanel>
            
        
    </Grid>
</Window>
